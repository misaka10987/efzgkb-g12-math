---
import { getStaticPaths } from './[date].astro'
import Layout from '@/layouts/Layout.astro'

const entries = getStaticPaths().map((x) => x.params.date)
---

<Layout>
  <slot slot="head">
    <title>作业</title>
  </slot>
  <div class="m-4">
    <article>
      <h1>作业</h1>
      <p>
        作业大都以作者修习此课程（2025-2026 学年）时相应的提交截止日期命名。
      </p>
      <h2>所有作业的目录</h2>
      <div>
        <ul>
          {
            entries.map((e) => (
              <li>
                <a href={e}>{e}</a>
              </li>
            ))
          }
        </ul>
      </div>
    </article>
  </div>
</Layout>
